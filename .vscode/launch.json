    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "program": "app/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/server",
            "env": {
                "PYTHONPATH": ".",
                "PYTHONDONTWRITEBYTECODE": "1"
            },
            "envFile": "${workspaceFolder}/server/.env"
        }
    ]
}
